page {
  background: #f7f7f7;
}

.item-one {
  width: 800rpx;
  height: 540rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0px 8rpx 20rpx 0px rgba(9, 36, 66, 0.04);
  border-radius: 8rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
  font-weight: 400;
  color: rgba(89, 108, 142, 1);
  line-height: 40rpx;
  margin: 30rpx 30rpx;
}

.items {
  width: 330rpx;
  height: 240rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0px 8rpx 20rpx 0px rgba(9, 36, 66, 0.04);
  border-radius: 8rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
  font-weight: 400;
  color: rgba(89, 108, 142, 1);
  line-height: 40rpx;
  margin-top: 30rpx;
}

.text {
  margin-top: 35rpx;
  font-size: 30rpx;
  letter-spacing: 3rpx;
}

.area-card {
  display: flex;
  flex-wrap: wrap;
  width: 690rpx;
  margin: 20rpx auto;
  flex-direction: row;
  justify-content: space-between;
  height: 600rpx;
}

.tab-content {
  min-height: 140rpx;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: rgba(140, 152, 174, 1);
}

.bottom {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.bottom .bottom-title {
  margin-top: 10rpx;
  font-size: 38rpx;
  letter-spacing: 2rpx;
}

.bottom .bottom-line {
  height: 1rpx;
  width: 80%;
  background-color: #dbd9d9;
  margin: 30rpx 0rpx
}

.bottom .bottom-item {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  width: 250rpx;
  font-size: 35rpx;
  color: #7f7f7f;
}

.bottom-item view {
  margin: 8rpx auto;
}

.bottom .bottom-button {
  width: 60%;
  height: 80rpx;
  background-color: #4d8fb8;
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 40rpx 0rpx 10rpx 0rpx;
  box-shadow: 0rpx 0rpx 15rpx 0rpx rgb(166, 199, 228);
  border-radius: 50rpx;
  color: white;

}