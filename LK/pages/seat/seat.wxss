.view-seat-all {
  width: 100%;
  height: 100%;
  position: absolute;
  overflow: hidden;
  background: #f6f6f6;
}

.view-seat-area {
  display: flex;
  justify-content: center;
  margin-top: 5rpx;
  position: absolute;
  z-index: 1;
  width: 100%;
  top: 10rpx;
}

.view-seat-area view {
  width: 400rpx;
  height: 70rpx;
  font-size: 35rpx;
  box-shadow: 0rpx 0rpx 5rpx 0rpx rgb(193, 193, 193);
  border-radius: 50rpx;
  background-color: #ffffff;
  align-items: center;
  display: flex;
  justify-content: center;
}

.view-seat-moa {
  width: 100%;
  height: 500rpx;
  position: absolute;
  overflow: hidden;
  margin-top: 5%;
}

.view-seat-slide {
  width: 100%;
  height: 500rpx;
  background: #f6f5f6;
  padding-top: 100rpx;
}

.view-seat-location {
  display: flex;
  flex-direction: row;
  justify-content: center;
  margin: 10rpx 0rpx;
}

.view-seat-img {
  width: 40rpx;
  height: 40rpx;
  margin: 0rpx 5rpx;
}

.view-seat-bottom {
  height: 400rpx;
  width: 90%;
  background-color: #ffffff;
  box-shadow: 0rpx 0rpx 5rpx 0rpx rgb(193, 193, 193);
  border-radius: 30rpx;
  position: absolute;
  bottom: 40rpx;
  left: 38rpx;
}

.view-seat-icons {
  display: flex;
  justify-content: space-between;
  margin: 30rpx 45rpx;
}

.icon {
  font-size: 18rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.icon image {
  width: 40rpx;
  height: 40rpx;
  margin-bottom: 5rpx;
}

.view-seat-bottom .line {
  display: flex;
  justify-content: center;
}

.view-seat-bottom .line view {
  height: 4rpx;
  width: 90%;
  background-color: #f6f6f6;
}

.view-seat-info {
  display: flex;
  justify-content: center;
}

.use-info {
  display: flex;
  margin-top: 30rpx;
}

.use-info image {
  width: 80rpx;
  height: 80rpx;
}

.use-info .info {
  margin: 0rpx 0rpx 0rpx 50rpx;
}

.item-unselect {
  display: flex;
  justify-content: space-between;
  width: 120rpx;
  font-size: 30rpx;
  color: #797979;
}

.item-selected {
  display: flex;
  justify-content: center;
  width: 280rpx;
  font-size: 30rpx;
  color: #333333;
  letter-spacing: 5rpx
}

.item-selected-time {
  display: flex;
  justify-content: center;
  width: 280rpx;
  font-size: 30rpx;
  color: #6e6e6e;
  letter-spacing: 2rpx
}

.item-inStudy {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 280rpx;
  font-size: 32rpx;
  color: #333333;
  letter-spacing: 5rpx;
}

.view-seat-button {
  display: flex;
  justify-content: center;
  margin-top: 60rpx;
}

.view-seat-button .item {
  background-color: #8a8a8a;
  width: 600rpx;
  height: 60rpx;
  box-shadow: 0rpx 0rpx 5rpx 0rpx rgb(193, 193, 193);
  border-radius: 30rpx;
  font-size: 35rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #f6f6f6;
}